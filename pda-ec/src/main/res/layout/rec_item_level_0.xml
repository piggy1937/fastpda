<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="6dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/tv_big_pack_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sales_sn"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_big_pack_customer_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textColor="#9c9c9c"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_big_pack_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_big_pack_work_order_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_big_pack_customer_order_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

      <LinearLayout

          android:layout_width="50sp"
          android:layout_height="fill_parent"
          android:orientation="vertical"
              >
          <TextView
              android:id="@+id/tv_big_pack_oquantity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1/1"
              android:layout_gravity="top|center"
              />
          <android.support.v7.widget.AppCompatButton
              android:layout_width="fill_parent"
              android:layout_marginTop="@dimen/dp_10"
              android:layout_height="34sp"
              android:layout_marginRight="@dimen/dp_4"
              android:layout_marginLeft="@dimen/dp_4"
              android:id="@+id/btn_big_pack_submit"
              android:gravity="center"
              android:text="@string/submit"
              android:background="@drawable/border_line_while"
              android:layout_gravity="center_vertical"
              android:textColor="@color/colorAccent"
              android:textSize="15sp"
              />
      </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>